<style>
@import url('https://fonts.googleapis.com/css?family=Open+Sans');
@import url('https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300');

*, html {
    padding: 0;
    margin: 0;
}

body {
    background-color: #2E2E2D;
    font-family: 'Open Sans', sans-serif;
}

.section__wrapper {
    padding: 20px;
}

.section__title {
    margin: 40px;
    text-align: center;
    font-size: 75px;
    font-weight: 700;
    line-height: .6;
    color: #C2C1BD;
    text-transform: uppercase;
    letter-spacing: 2px;
}

.section__tweets {
    display: flex;
    justify-content: center;
}

ul {
    background: #ffffff;
    color: #2E2E2D;
    list-style: none;
    padding: 10px 20px;
    margin: 25px 0;
    width: 1000px;
    border: 5px solid #C2C1BD;
    border-radius: 25px;
}

li {
    font-size: 18px;
    padding: 15px;
}

</style>

<html>
    <head>
        <meta charset="UTF-8">
        <title>Twitter Feed</title>
    </head>
    <body>
        <section class="section__wrapper">
        <h1 class="section__title">Cerys' Feed</h1>
            <div class="section__tweets">
                <ul>
                    {% for status in statuses %}
                        <li><b>{{ status.user }}:</b> {{ status.date|date("d/m/Y") }} {{ status.tweet|raw }}</li>
                    {% endfor %}
                </ul>
            </div>
        </section>
    </body>
</html>
